{
  "name": "pompytube-electron",
  "version": "1.1.0",
  "description": "YouTube TV Electron Client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --remote-debugging-port=8315",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Cline",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@formatjs/intl-displaynames": "^6.6.0",
    "@formatjs/intl-getcanonicallocales": "^2.2.0",
    "@formatjs/intl-locale": "^3.4.0",
    "builder-util-runtime": "^9.5.1",
    "core-js": "^3.33.0",
    "debug": "^4.4.3",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "graceful-fs": "^4.2.11",
    "js-yaml": "^4.1.1",
    "jsonfile": "^6.2.0",
    "lazy-val": "^1.0.5",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.isequal": "^4.5.0",
    "ms": "^2.1.3",
    "sax": "^1.4.4",
    "semver": "^7.7.3",
    "tiny-sha256": "^1.0.2",
    "universalify": "^2.0.1",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.electron.pompytube",
    "productName": "PompyTube",
    "asar": true,
    "files": [
      "**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
